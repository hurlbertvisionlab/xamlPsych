<Window x:Class="HurlbertVisionLab.XamlPsychHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HurlbertVisionLab.XamlPsychHost"
        
        Title="Run Study - Hurlbert Vision Lab"  Width="1920" Height="1080" 
        
        FontFamily="Arial" FontSize="32"
        TextBlock.Foreground="{DynamicResource ThemeForeground}"
        Background="{DynamicResource ThemeBackground}"
        
        Loaded="OnLoaded">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Name="_sessionCode" HorizontalAlignment="Center" />
        <TextBlock Name="_status" Text="Loading..." HorizontalAlignment="Center" Margin="0,1cm,0,0" />
        <TextBlock Name="_statusProgress" HorizontalAlignment="Center" />
    </StackPanel>
    
</Window>